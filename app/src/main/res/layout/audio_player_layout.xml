<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/_20sdp"
    android:paddingVertical="@dimen/_25sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:backgroundTint="?audio_player_bg_color"
    android:background="@drawable/audio_rounded_bg"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/cancelIV"
            app:layout_constraintBottom_toBottomOf="@id/cancelIV"
            android:text="title"
            android:gravity="center"
            android:textColor="?black_text_color"
            style="@style/SemiBoldFont"
            android:textSize="@dimen/_12ssp"/>

        <ImageView
            android:id="@+id/cancelIV"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_cancel_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <SeekBar
            app:layout_constraintTop_toBottomOf="@id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:progressDrawable="@drawable/seekbar_style"
            android:thumb="@drawable/custom_thumb"
            android:splitTrack="false"
            android:id="@+id/seekBar" />
        <ImageView
            android:id="@+id/previousIV"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_audio_previous"
            android:tint="?audio_player_icon_tint"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="@id/playIV"
            app:layout_constraintBottom_toBottomOf="@id/playIV"
            app:layout_constraintEnd_toStartOf="@id/minusIV"
            app:layout_constraintStart_toStartOf="@id/seekBar"
            app:layout_constraintTop_toBottomOf="@id/seekBar"/>
        <ImageView
            android:id="@+id/minusIV"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/playIV"
            app:layout_constraintBottom_toBottomOf="@id/playIV"
            app:layout_constraintEnd_toStartOf="@id/playIV"
            app:layout_constraintStart_toEndOf="@id/previousIV"
            app:layout_constraintTop_toBottomOf="@id/seekBar"/>
        <ImageView
            android:id="@+id/playIV"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_audio_pause"
            android:tint="?audio_player_icon_tint"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="@+id/guideLine"
            app:layout_constraintEnd_toEndOf="@+id/guideLine"
            app:layout_constraintTop_toBottomOf="@id/seekBar"/>
        <ImageView
            android:id="@+id/plusIV"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:visibility="gone"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="@id/playIV"
            app:layout_constraintBottom_toBottomOf="@id/playIV"
            app:layout_constraintStart_toEndOf="@id/playIV"
            app:layout_constraintEnd_toStartOf="@id/nextIV"
            app:layout_constraintTop_toBottomOf="@id/seekBar"/>
        <ImageView
            android:id="@+id/nextIV"
            app:layout_constraintStart_toEndOf="@id/plusIV"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/_25sdp"
            app:layout_constraintTop_toTopOf="@id/playIV"
            app:layout_constraintBottom_toBottomOf="@id/playIV"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:tint="?audio_player_icon_tint"
            android:src="@drawable/ic_audio_next"
            app:layout_constraintTop_toBottomOf="@id/seekBar"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>